<div class="main">
  <div class="inner">
    <div class="user__wrapper">
      <h2 class="page-heading">
        <%= "#{@user.name}さんの情報"%>
      </h2>
      <table class="table">
        <tbody>
          <tr>
            <th class="table__col1">プロフィール</th>
            <td class="table__col2"><%= "#{@user.profile}" %></td>
          </tr>
          <tr>
            <th class="table__col1">ジャンル</th>
            <td class="table__col2"><%= "#{@user.occupation}" %></td>
          </tr>
          <tr>
            <th class="table__col1">Twitter</th>
            <td class="table__col2">
            <a href=<%= "#{@user.position}" %> class="twitter-follow-button" data-show-count="false"></a><script async src="https://platform.twitter.com/widgets.js" charset="utf-8"></script>
            </td>
          </tr>
        </tbody>
      </table>
      <h2 class="page-heading">
        <%= "#{@user.name}さんのVoice--carD一覧"%>
      </h2>
      <div class='item-contents'>
        <ul class='item-lists'>
          <%# 部分テンプレートでそのユーザーが投稿したプロトタイプ投稿一覧を表示する %>
          <%= render partial: "prototypes/prototype", collection: @prototypes %>
        </ul>
      </div>
    </div>
  </div>
</div>