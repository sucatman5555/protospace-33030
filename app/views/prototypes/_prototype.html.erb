
<%= link_to prototype_path(prototype.id) do %>
  <%# カテゴリー別にカードの色を変える %>
  <% if prototype.category_id == 2 %>
    <li class='list card_back card_color2'>
  <% elsif prototype.category_id == 3 %>
    <li class='list card_back card_color3'>
  <% elsif prototype.category_id == 6 %>
    <li class='list card_back card_color6'>
  <% elsif prototype.category_id == 9 %>
    <li class='list card_back card_color9'>
  <% else %>
    <li class='list card_back card_color'>
  <% end %>
  <%# //カテゴリー別にカードの色を変える %>
    <div class='item-img-content'>
      <%= image_tag prototype.image, class: "item-img" %>
    </div>
    <div class='item-info'>
      <div class='star-btn'>
        <%= "(#{I18n.l prototype.created_at, formats: :default})" %>
      </div>
      <p class='item-name'>
        <%= prototype.title %>
      </p>
      <p class='item-name'>
      <%= link_to "by #{prototype.user.name}", "/users/#{prototype.user.id}", class: :prototype__user %>
      </p>
      <div class='star-btn-top'>
        <%= image_tag "category.png", class:"star-icon" %>
        <span class='star-count-top'><%= prototype.category.name %></span>
      </div>
      <div class='item-price'>
        <div class='star-btn-top'>
          <%= image_tag "count.png", class:"star-icon" %>
          <span class='star-count-top'><%= prototype.impressions_count %></span>
        </div>
        <div class='star-btn-top'>
          <%= image_tag "good.png", class:"star-icon" %>
          <span class='star-count-top'><%= prototype.liked_users.count %></span>
        </div>
      </div>
    </div>
  </li>
<% end %>